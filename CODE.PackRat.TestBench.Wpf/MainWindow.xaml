<Window x:Class="CODE.PackRat.TestBench.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PackRat Rest Bench" Height="445" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Left">Search Packages:</Label>
        <TextBox HorizontalAlignment="Stretch" x:Name="searchTerm" Margin="105,0,113,0" />
        <Button Content="Search and Inst." HorizontalAlignment="Right" Width="108" Click="SearchPackages"/>

        <TextBox AcceptsReturn="True" Grid.Row="1" Margin="10" x:Name="results"/>
    </Grid>
</Window>
